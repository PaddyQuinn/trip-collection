<header>
	<%#= link_to "home", root_path, id: "logo" %>
	<%= nav_bar fixed: :top, responsive: true, brand: "trip collection" do %>
		<%= menu_group do %>
			<%= menu_item "Home", root_path %>
			<%= menu_item "About" %>
			<%= menu_item "Contact" %>
		<% end %>
		<% if current_user %>
			<%= menu_item "Log Out", logout_path, method: "delete" %>
			
			<%= link_to "Users", '#' %>
			<%= link_to "Profile", current_user %>

		<% else %>
			<%= menu_group pull: :right do %>
				<%= form_for :session, :url => login_path do |f| -%>
					<%= f.email_field :email %>
					<%= f.password_field :password %>
					<%= f.submit "Log in" %>
				<% end -%>
				<%= menu_item "Sign Up", signup_path %>
			<% end %>
		<% end %>
	<% end %>
</header>
